<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themes_preview_background"
    android:gravity="center"
    android:padding="42dp"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp">

    <RelativeLayout
        android:layout_width="224dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@drawable/colt_preview_card">

        <LinearLayout
            android:id="@+id/clock_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:"
                android:textColor="@color/preview_text"
                android:textStyle="bold"
                android:textSize="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="@color/preview_text"
                android:textSize="40sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/day_layout"
            android:layout_toEndOf="@id/clock_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="thursday"
            android:textColor="?android:attr/colorAccent"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/date_layout"
            android:layout_toEndOf="@id/clock_layout"
            android:layout_below="@id/day_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-2dp"
            android:layout_marginStart="8dp"
            android:text="16 july"
            android:textColor="@color/preview_text"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout> 
