<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

        <!-- Colt Logo Header -->
        <Preference 
           android:key="colt_header_about"
           android:layout="@layout/colt_header_about" />

	<!-- Notifications -->
        <com.colt.settings.preference.CategoryColtPreference
	    android:key="notifications_category"
            android:title="@string/notifications_title"
	    android:summary="@string/notifications_summary"
            android:fragment="com.colt.settings.fragments.NotificationSettings" />

	<!-- Animations -->
        <com.colt.settings.preference.CategoryColtPreference
	    android:key="animations_category"
            android:title="@string/animations_title"
	    android:summary="@string/animations_summary"
            android:fragment="com.colt.settings.fragments.Animations" />

	<!-- Colt Decorations -->
	<com.colt.settings.preference.CategoryColtPreference
	    android:key="system_colors"
            android:title="@string/system_colors"
	    android:summary="@string/system_colors_summary"
	    android:fragment="com.colt.settings.fragments.Themes" />

	<!-- Screen -->
	<com.colt.settings.preference.CategoryColtPreference
            android:key="screen_category"
            android:title="@string/screen_title"
	    android:summary="@string/screen_summary"
            android:fragment="com.colt.settings.fragments.Screen" />

	<!-- Recents -->
        <com.colt.settings.preference.CategoryColtPreference
	    android:key="recents_category"
            android:title="@string/recents_title"
	    android:summary="@string/recents_summary"
            android:fragment="com.colt.settings.fragments.RecentsSettings" />

	<!-- Misc -->
	<com.colt.settings.preference.CategoryColtPreference
            android:key="misc_category"
            android:title="@string/misc_title" 
	    android:summary="@string/misc_summary"
            android:fragment="com.colt.settings.fragments.MiscSettings" />

</PreferenceScreen>
