<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/xd_about">

    <!-- xd. Desc -->
    <Preference
        android:key="xd_about_desc"
        settings:layout="@layout/xd_about_desc"
        android:selectable="false"/>

    <!-- Core Team Category -->
    <PreferenceCategory
        android:key="xd_about_core_team"
        android:title="@string/xd_about_core_team_cat">

        <!-- rakesh -->
        <Preference
            android:key="xd_about_rakesh"
            settings:layout="@layout/xd_about_core_pref"
            android:icon="@drawable/xd_about_rakesh"
            android:title="@string/xd_about_core_rakesh"
            android:summary="@string/xd_about_core_rakesh_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/rakeshbatra"/>

        </Preference>

        <!-- roger -->
        <Preference
            android:key="xd_about_roger"
            android:icon="@drawable/xd_about_rakesh"
            settings:layout="@layout/xd_about_core_pref"
            android:title="@string/xd_about_core_roger"
            android:summary="@string/xd_about_core_roger_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/gerobaksariroti"/>

        </Preference>
        
        <!-- ghosuto -->
        <Preference
            android:key="xd_about_ghost"
            settings:layout="@layout/xd_about_core_pref"
            android:icon="@drawable/xd_about_rakesh"
            android:title="@string/xd_about_core_ghost"
            android:summary="@string/xd_about_core_ghost_role">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/Ghosuto7"/>

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
